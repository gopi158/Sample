<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headersize"
        android:animateLayoutChanges="true"
        android:background="@color/appwhitecolor"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/appmargin"
            android:paddingTop="@dimen/appmargin"
            android:src="@drawable/logoheader" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/appmargin"
            android:background="@null"
            android:gravity="center"
            android:onClick="Done_click"
            android:text="Done"
            android:textColor="@color/buttoncol"
            android:textSize="@dimen/Bannertextsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:animateLayoutChanges="true"
        android:alpha="0.5"    
        android:background="@color/linecol" />

    <WebView
        android:id="@+id/webView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" />

</LinearLayout>