<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headersize"
        android:background="@color/appwhitecolor"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Register"
            android:textColor="@color/tabDark"
            android:textSize="@dimen/Bannertextsize"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/appmargin"
            android:background="@null"
            android:onClick="Register_click"
            android:text="Continue"
            android:textColor="@color/buttoncol"
            android:textSize="@dimen/edittextsize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="@color/linecol" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/appmargin"
            android:layout_weight="8"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/register_profile_img"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/appmargin"
                    android:layout_marginRight="@dimen/appmargin"
                    android:layout_marginTop="5dp"
                    android:onClick="Image_click"
                    android:scaleType="fitXY"
                    android:src="@drawable/chooseimg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/signupfnameetid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                	android:maxLength="50"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/linecol"
                    android:textSize="@dimen/edittextsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/linecol" />

                <EditText
                    android:id="@+id/signuplnameetid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                	android:maxLength="50"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/linecol"
                    android:textSize="@dimen/edittextsize" >
                </EditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.1"
                    android:background="@color/linecol" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/appmargin"
            android:layout_weight="7"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/signupemailetid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"         
                android:maxLength="50"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/linecol"
                android:textSize="@dimen/edittextsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecol" />

            <EditText
                android:maxLength="50"
                android:id="@+id/signuppasswordetid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Password"
                android:password="true"
                android:textColorHint="@color/linecol"
                android:textSize="@dimen/edittextsize" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/linecol" />

            <EditText
                android:maxLength="50"
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="Re-enter Password"
                android:inputType="textPersonName"
                android:password="true"
                android:textColorHint="@color/linecol"
                android:textSize="@dimen/edittextsize" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecol" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>