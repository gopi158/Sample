<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="#000000" >

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/quickaction_arrow_down" />

    
    <ImageView
        android:id="@+id/imgbtnOntrack"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imgbtnbehind"
        android:layout_below="@+id/imgbtnbehind"
        android:src="@drawable/btnontrack" />

    <ImageView
        android:id="@+id/imgbtnbehind"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imgbtnahead"
        android:layout_below="@+id/imgbtnahead"
        android:src="@drawable/btnbehind" />

    <ImageView
        android:id="@+id/imgbtnahead"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/btnahead" />

    <ImageView
        android:id="@+id/imgbtncomplete"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imgbtnOntrack"
        android:layout_below="@+id/imgbtnOntrack"
        android:src="@drawable/btncomplete" />

</RelativeLayout>