<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headersize"
        android:animateLayoutChanges="true"
        android:background="@color/appwhitecolor"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:onClick="Settingsclick"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/appmargin"
            android:src="@drawable/logoheader" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:animateLayoutChanges="true"
        android:background="@color/linecol" />

    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/banner_IM"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2.1"
                android:animateLayoutChanges="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner" />

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:animateLayoutChanges="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:animateLayoutChanges="true"
                    android:background="@color/appwhitecolor"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="@dimen/profilewidth"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/appmargin"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/profilepageprofilenametvid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:textColor="#f47b20"
                            android:textSize="@dimen/edittextsize"
                            android:textStyle="bold" />

                        <ScrollView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:animateLayoutChanges="true" >

                            <TextView
                                android:id="@+id/profilepagemystorytvid"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:scrollbars="vertical"
                                android:textColor="#000000"
                                android:textSize="@dimen/edittextsize" />
                        </ScrollView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.75"
                    android:animateLayoutChanges="true"
                    android:background="@color/appwhitecolor"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/profilepagefinaosbtnid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gradiense_button"
                        android:text="Button" />

                    <Button
                        android:id="@+id/profilepagetilesbtnid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:background="@drawable/gradiense_button"
                        android:text="Button" />

                    <Button
                        android:id="@+id/profilepagefollowingbtnid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gradiense_button"
                        android:text="Button" />

                    <Button
                        android:id="@+id/profilepagefollwersbtnid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gradiense_button"
                        android:text="Button" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.75"
                android:animateLayoutChanges="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:animateLayoutChanges="true"
                    android:background="@color/appwhitecolor" >

                    <Button
                        android:id="@+id/profilepagepostbtnid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gradiense_button"
                        android:text="POSTS"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/profilepageinspiredbtnid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/gradiense_button"
                        android:text="INSPIRED"
                        android:textStyle="bold" >
                    </Button>
                </LinearLayout>

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="No items"
                    android:textSize="@dimen/edittextsize"
                    android:visibility="gone" />

                <com.finaonation.utils.Finaolistview
                    android:id="@+id/profilepagelvid"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:divider="#eeeeee"
                    android:dividerHeight="1dp" >
                </com.finaonation.utils.Finaolistview>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll3"
            android:layout_width="@dimen/profilewidth"
            android:layout_height="@dimen/profileheight"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/appmargin"
            android:animateLayoutChanges="true"
            android:background="#4863A0" >

            <ImageView
                android:id="@+id/profilepageprofilepicivid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/app_icon" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>